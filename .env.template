# Environment Configuration
NODE_ENV="development" # Options: 'development', 'production'
PORT="8080"            # The port your server will listen on
HOST="localhost"       # Hostname for the server

# CORS Settings
CORS_ORIGIN="http://localhost:8080" # Allowed CORS origin, adjust as necessary

# Rate Limiting
COMMON_RATE_LIMIT_WINDOW_MS="1000"  # Window size for rate limiting (ms)
COMMON_RATE_LIMIT_MAX_REQUESTS="20" # Max number of requests per window per IP

# MongoDB
MONGO_URI="mongodb://localhost:27017"  # MongoDB connection string
MONGO_DB="fee-consolidation"           # Database name

# Fee Collector — Polygon
FEE_COLLECTOR_POLYGON_RPC="https://polygon-rpc.com"                          # Polygon RPC endpoint
FEE_COLLECTOR_POLYGON_ADDRESS="0xbD6C7B0d2f68c2b7805d88388319cfB6EcB50eA9"   # FeeCollector contract on Polygon
FEE_COLLECTOR_POLYGON_START_BLOCK="78600000"                                 # Oldest block to consider on Polygon
FEE_COLLECTOR_POLYGON_REORG_BACKTRACK="200"                                  # Blocks to roll back on reorg (Polygon)

# Fee Collector — Ethereum
# FEE_COLLECTOR_ETHEREUM_RPC="https://polygon-rpc.com"                          # ETHEREUM RPC endpoint
# FEE_COLLECTOR_ETHEREUM_ADDRESS="0xbD6C7B0d2f68c2b7805d88388319cfB6EcB50eA9"   # FeeCollector contract on ETHEREUM
# FEE_COLLECTOR_ETHEREUM_START_BLOCK="78600000"
# FEE_COLLECTOR_ETHEREUM_REORG_BACKTRACK="64"                                  # Blocks to roll back on reorg (Ethereum)

# Fee Collector — Sync Settings (shared across all chains)
FEE_COLLECTOR_CONFIRMATIONS="20"          # Blocks behind head to treat as finalized
FEE_COLLECTOR_BATCH_SIZE="2000"           # Max block range per query
FEE_COLLECTOR_POLL_INTERVAL_MS="15000"    # Delay between poll cycles (ms)
FEE_COLLECTOR_BATCH_DELAY_MS="200"       # Delay between batches to avoid RPC rate limits (ms)
